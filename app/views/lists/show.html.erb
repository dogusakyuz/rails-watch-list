<!-- app/views/lists/show.html.erb -->
<div class="list-details">
  <h1 class="list-title"><%= @list.name %></h1>

  <h2 class="movies-title">Movies in <%= @list.name %></h2>
  <ul class="movies-list">
    <% @list.movies.each do |movie| %>
      <li class="movie-item"><%= movie.title %></li>
    <% end %>
  </ul>

  <%= link_to "Add Bookmark", new_list_bookmark_path(@list), class: "add-bookmark-button" %>
  <%= link_to "Back to Lists", lists_path, class: "back-to-lists-button" %>
  <%= link_to 'Delete List', list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
</div>

